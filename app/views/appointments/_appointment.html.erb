<%= turbo_frame_tag dom_id(appointment) do %>
  <div id="<%= dom_id appointment %>">
    <div class="md:container md:mx-auto">

      <div class="p-4 my-2 bg-slate-200 rounded-xl flex flex-row space-x-4">
        <div class="text-gray-700">Thank you <strong><%= appointment.name %></strong>, your appointment for 
          <strong><%= appointment.service %></strong>
          has been set for <strong><%= appointment.month %></strong> <strong><%= appointment.day %>
          </strong>. We look forward to seeing you then.
        </div>
        
        <div class="text-blue-700 bg-blue-200 px-1 w-fit align-middle rounded-md">
          <%= link_to "Edit", edit_appointment_path(appointment) %>
        </div>
  
        <div class="text-red-700 bg-red-200 px-1 w-fit align-middle rounded-md">
          <%= button_to "Destroy", @appointment, method: :delete %>
        </div>
      </div>
  </div>
</div>
<% end %>